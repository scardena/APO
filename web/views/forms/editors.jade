extends ../layout
block content
	// Content Header (Page header)
	section.content-header
		h1
			| Text Editors
			small Advanced form element
		ol.breadcrumb
			li
				a(href='#')
					i.fa.fa-dashboard
					| Home
			li
				a(href='#') Forms
			li.active Editors
	// Main content
	section.content
		.row
			.col-md-12
				.box.box-info
					.box-header
						h3.box-title
							| CK Editor
							small Advanced and full of features
						// tools box
						.pull-right.box-tools
							button.btn.btn-info.btn-sm(data-widget='collapse', data-toggle='tooltip', title='Collapse')
								i.fa.fa-minus
							button.btn.btn-info.btn-sm(data-widget='remove', data-toggle='tooltip', title='Remove')
								i.fa.fa-times
						// /. tools
					// /.box-header
					.box-body.pad
						form
							textarea#editor1(name='editor1', rows='10', cols='80')
								| This is my textarea to be replaced with CKEditor.
				// /.box
				.box
					.box-header
						h3.box-title
							| Bootstrap WYSIHTML5
							small Simple and fast
						// tools box
						.pull-right.box-tools
							button.btn.btn-default.btn-sm(data-widget='collapse', data-toggle='tooltip', title='Collapse')
								i.fa.fa-minus
							button.btn.btn-default.btn-sm(data-widget='remove', data-toggle='tooltip', title='Remove')
								i.fa.fa-times
						// /. tools
					// /.box-header
					.box-body.pad
						form
							textarea.textarea(placeholder='Place some text here', style='width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;')
			// /.col
		// ./row
	// /.content
block javascript
	// jQuery 2.0.2
	script(src='/js/libs/jquery.min.js')
	// Bootstrap
	script(src='/js/bootstrap.min.js', type='text/javascript')
	// AdminLTE App
	script(src='/js/AdminLTE/app.js', type='text/javascript')
	// AdminLTE for demo purposes
	script(src='/js/AdminLTE/demo.js', type='text/javascript')
	// CK Editor
	script(src='/js/plugins/ckeditor/ckeditor.js', type='text/javascript')
	// Bootstrap WYSIHTML5
	script(src='/js/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js', type='text/javascript')
	script(src='/js/AdminLTE/forms/editors.js',type='text/javascript')
