extends layout
block content
	// Content Header (Page header)
	section.content-header
		h1
			| ORACLE
			small Control panel
		ol.breadcrumb
			li
				a(href='#')
					i.fa.fa-dashboard
					| Home
			li.active Dashboard
	// Main content
	section.content
		// Small boxes (Stat box)
		.row
			// Left col
			section.col-lg-6.connectedSortable
				// Box (with bar chart)
				#loading-example.box.box-solid.box-info
					.box-header
						.pull-right.box-tools
							button.btn.btn-info.btn-sm(data-widget='collapse',data-toggle='tooltip',title='Collapse')
								i.fa.fa-minus
						h3.box-title Server Load
					.box-body
						.box-body.table-responsive
							table.table.table-hover
								tr
									th Oracle Instance
									th Status
								
								tr
									td ORACLE OSF
									td
										- var status = osfstatus 	
										if status == "OPEN"
											span.label.label-success #{osfstatus}
										else
											span.label.label-danger #{osfstatus}
								tr
									td ORACLE SCO
									td
										- var myvar = scostatus
										if status == "OPEN"
											span.label.label-success #{scostatus}
										else
											span.label.label-danger #{scostatus}
			section.col-lg-6.connectedSortable
				// Box (with bar chart)
				#loading-example.box.box-solid.box-info
					.box-header
						.pull-right.box-tools
							button.btn.btn-info.btn-sm(data-widget='collapse',data-toggle='tooltip',title='Collapse')
								i.fa.fa-minus
						h3.box-title Server Load
					.box-body
						.row
							.col-sm-12
								.pad
									.clearfix
										span.pull-left Oracle SCO Size
	
		.row 
			.col-md-6
				.box.box-solid.box-info
					.box-header
						.pull-right.box-tools
							button.btn.btn-info.btn-sm(data-widget='collapse',data-toggle='tooltip',title='Collapse')
								i.fa.fa-minus

						h3.box-title ASM Groups SCO
					.box-body.table-responsive
						table.table.table-bordered.table-hover
							thead
								tr
									th Name
									th Free (GB)
									th Total (GB)
								tbody
								each metric, i in asmsco
									td #{metric.name}
									td #{metric.free}
									td #{metric.total}
									tr 
	
			.col-md-6
				.box.box-solid.box-info
					.box-header
						.pull-right.box-tools
							button.btn.btn-info.btn-sm(data-widget='collapse',data-toggle='tooltip',title='Collapse')
								i.fa.fa-minus

						h3.box-title ASM Groups OSF
					.box-body.table-responsive
						table.table.table-bordered.table-hover
							thead
								tr
									th Name
									th Free (GB)
									th Total (GB)
								tbody
								each metric, i in asmosf
									td #{metric.name}
									td #{metric.free}
									td #{metric.total}
									tr
		.row 
			.col-md-12
				.box.box-solid.box-info
					.box-header
						.pull-right.box-tools
							button.btn.btn-info.btn-sm(data-widget='collapse',data-toggle='tooltip',title='Collapse')
								i.fa.fa-minus

						h3.box-title TablesSpaces SCO
					.box-body.table-responsive
						table.table.table-bordered.table-hover
							thead
								tr
									th Name
									th MB Used
									th MB Free
									th MB Total
									th MB Not Alloc
									th Free %
									th Datafiles
									th Status
								tbody
								each table, i in tablespacessco
									td #{table.name}
									td #{table.mbused}
									td #{table.mbfree}
									td #{table.mbtotal}
									td #{table.mbnotall}
									td #{table.percused}
									td #{table.datafiles}
									td 
										- var status = table.status	
										if status == "ONLINE"
											span.label.label-success Online
										else
											span.label-label-danger Danger
									tr

		.row 
			.col-md-12
				.box.box-solid.box-info
					.box-header
						.pull-right.box-tools
							button.btn.btn-info.btn-sm(data-widget='collapse',data-toggle='tooltip',title='Collapse')
								i.fa.fa-minus
						h3.box-title TablesSpaces OSF
					.box-body.table-responsive
						table.table.table-bordered.table-hover
							thead
								tr
									th Name
									th MB Used
									th MB Free
									th MB Total
									th MB Not Alloc
									th Used %
									th Datafiles
									th Status
								tbody
								each table, i in tablespacesosf
									td #{table.name}
									td #{table.mbused}
									td #{table.mbfree}
									td #{table.mbtotal}
									td #{table.mbnotall}
									td #{table.percused}
									td #{table.datafiles}
									td 
										- var status = table.status	
										if status == "ONLINE"
											span.label.label-success Online
										else
											span.label-label-danger Danger
									tr


		.row 
			.col-md-12
				.box.box-solid.box-info
					.box-header
						.pull-right.box-tools
							button.btn.btn-info.btn-sm(data-widget='collapse',data-toggle='tooltip',title='Collapse')
								i.fa.fa-minus
						h3.box-title Oracle Alerts Status
					.box-body.table-responsive
						table.table-bordered
							thead
								tr
									th Target Name
									th Target Type
									//th Metric Name
									//th Metric Column
									th Metric Label
									th Column Label
									//th Key Value
									th Timestamp
									th Current Value
									//th Type Display Name
									th Message
									th Status
								tbody
								each metric, i in oracleinfo
									td #{metric.targetname}
									td #{metric.targettype}
									//td #{metric.metricname}
									//td #{metric.metriccolumn}
									td #{metric.metriclabel}
									td #{metric.columnlabel}
									//td #{metric.keyvalue}
									td #{metric.timestamp}
									td #{metric.currentvalue}
									//td #{metric.typedisplayname}
									td #{metric.message}
									td 
										- var status = metric.alert	
										if status == "Warning"
											span.label.label-warning #{metric.alert}
										else if status == "Critical"
											span.label.label-danger #{metric.alert}
										else
											span.label.label-info #{metric.alert}
									tr


