extends ../layout
block content
	// Content Header (Page header)
	section.content-header
		h1
			| ORACLE
			small Control panel
		ol.breadcrumb
			li
				a(href='#')
					i.fa.fa-dashboard
					| Home
			li.active Dashboard
	// Main content
	section.content
		// Small boxes (Stat box)
		.row
			// Left col
			section.col-lg-12.connectedSortable
				// Box (with bar chart)
				#loading-example.box.box-solid.box-info
					.box-header
						.pull-right.box-tools
							button.btn.btn-info.btn-sm(data-widget='collapse',data-toggle='tooltip',title='Collapse')
								i.fa.fa-minus
						h3.box-title Server Load
					.box-body
						.box-body.table-responsive
							table.table.table-hover
								tr
									th.pull-left Service Name
									th Status
								tr
									td.pull-left SCO NGAS Disk Array
									td
										span.label.label-warning NO DATA
								tr
									td.pull-left OSF NGAS Disk Array
									td
										span.label.label-warning NO DATA
								tr
									td.pull-left ORACLE OSF
									td
										- var myvar = "asdasd"	
										if myvar == "CLOSED"
											span.label.label-success myvar
										else
											span.label.label-danger #{myvar}
								tr
									td.pull-left ORACLE SCO
									td
										span.label.label-success #{scostatus}
					// /.box-body
				// /.box
				// Custom tabs (Charts with tabs)

			// right col
		// /.row (main row)
		.row 
			.col-md-12
				#loading-example.box.box-solid.box-info
					.box-header
						.pull-right.box-tools
							button.btn.btn-info.btn-sm(data-widget='collapse',data-toggle='tooltip',title='Collapse')
								i.fa.fa-minus

						h3.box-title TablesSpaces SCO
					.box-body.table-responsive
						table#example2.table.table-bordered.table-hover
							thead
								tr
									th Name
									th Alloc GB
									th Used GB
									th Free GB
									th Used %
									th Free %
									th Status
								tbody
								each user, i in userlist
									td #{user.name}
									td #{user.allocgb}
									td #{user.usedgb}
									td #{user.freegb}
									td #{user.percused}
									td #{user.percfree}
									td 
										- var status = user.status	
										if status == "green"
											span.label.label-success OK
										else if status = "yellow"
											span.label.label-warning Warning
										else
											span.label-label-danger Danger
									tr

		.row 
			.col-md-12
				.box.box-solid.box-info
					.box-header
						.pull-right.box-tools
							button.btn.btn-info.btn-sm(data-widget='collapse',data-toggle='tooltip',title='Collapse')
								i.fa.fa-minus
						h3.box-title TablesSpaces OSF
					.box-body.table-responsive
						table.table.table-bordered.table-hover
							thead
								tr
									th Name
									th Alloc GB
									th Used GB
									th Free GB
									th Used %
									th Free %
									th Status
								tbody
								each user, i in userlist2
									td #{user.name}
									td #{user.allocgb}
									td #{user.usedgb}
									td #{user.freegb}
									td #{user.percused}
									td #{user.percfree}
									td 
										- var status = user.status	
										if status == "green"
											span.label.label-success OK
										else if status = "yellow"
											span.label.label-warning Warning
										else
											span.label-label-danger Danger
									tr
		.row 
			.col-md-12
				.box.box-solid.box-info
					.box-header
						.pull-right.box-tools
							button.btn.btn-info.btn-sm(data-widget='collapse',data-toggle='tooltip',title='Collapse')
								i.fa.fa-minus
						h3.box-title Oracle Alerts Status
					.box-body.table-responsive
						table.table-bordered
							thead
								tr
									th Target Name
									th Target Type
									//th Metric Name
									//th Metric Column
									th Metric Label
									th Column Label
									//th Key Value
									th Timestamp
									th Current Value
									//th Type Display Name
									th Message
									th Status
								tbody
								each metric, i in data5
									td #{metric.targetname}
									td #{metric.targettype}
									//td #{metric.metricname}
									//td #{metric.metriccolumn}
									td #{metric.metriclabel}
									td #{metric.columnlabel}
									//td #{metric.keyvalue}
									td #{metric.timestamp}
									td #{metric.currentvalue}
									//td #{metric.typedisplayname}
									td #{metric.message}
									td 
										- var status = metric.alert	
										if status == "Warning"
											span.label.label-warning #{metric.alert}
										else if status == "Critical"
											span.label.label-danger #{metric.alert}
										else
											span.label.label-info #{metric.alert}
									tr


