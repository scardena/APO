				if myicon == "OK" 
					.small-box.bg-green
						.inner
							h3
								| Backlog NA 
							h2
								| #{backlogNA} Files, #{sizeNA} GB 
						.icon
							i.fa.fa-file-o




				else
					.small-box.bg-red
						.inner
							h3
								| Backlog NA
							h2
								| #{backlogNA} Files, #{sizeNA} GB
						.icon-small
							i.fa.fa-warning





			.col-lg-4.col-xs-6
				- var myicon = statusEU
