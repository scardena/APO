extends layout
block content
	// Content Header (Page header)
	section.content-header
		h1
			| ALMA Monitoring
			small General
		ol.breadcrumb
			li
				a(href='#')
					i.fa.fa-dashboard
					| Home
			li.active Dashboard
	// Main content
	section.content
