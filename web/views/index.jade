extends layout
block content
	// Content Header (Page header)
	section.content-header
		h1
			| ALMA Monitoring
			small General
		ol.breadcrumb
			li
				a(href='#')
					i.fa.fa-dashboard
					| Home
			li.active Dashboard
	// Main content
	section.content
		.row
			#loading-example.box.box-danger
				.box-header
					h3.box-title ARCS Link State
				.box-body.no-padding
					.row
						.col-sm-12
							.pad
								.clearfix
									span.pull-left NRAO, ESO, NAOJ
								#chartContainer A chart will render here
					.row
						.col-sm-12
							.pad
								.clearfix
									span.pull-left Chile
								#chartChile A chart will render here	
									


